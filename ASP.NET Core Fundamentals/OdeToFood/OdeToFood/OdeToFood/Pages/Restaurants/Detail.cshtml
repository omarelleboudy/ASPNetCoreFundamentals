@page "{restaurantId:int}"
@model OdeToFood.Pages.Restaurants.DetailModel
@{
    ViewData["Title"] = "Detail";
}


<h2>@Model.Restaurant.Name</h2>
<div>ID: @Model.Restaurant.Id</div>
<div>
    Location: @Model.Restaurant.Location
</div>
<div>Cuisine: @Model.Restaurant.Cuisine</div>

@if (Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}


<a asp-page="./List" class="btn btn-outline-dark">All Restaurants</a>